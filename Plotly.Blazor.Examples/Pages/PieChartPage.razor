@page "/pie"

<h1>Pie Chart</h1>

<Tabs SelectedTab="@selectedTab" SelectedTabChanged="@OnSelectedTabChanged">
    <Items>
        <Tab Name="example">Example</Tab>
        <Tab Name="code">Code</Tab>
    </Items>
    <Content>
        <TabPanel Name="example">
            <Container>
                <br />
                <PieChart/>
            </Container>
        </TabPanel>
        <TabPanel Name="code">
            <Container>
                <br />
                <CodeSnippet Uri="Plotly.Blazor.Examples/Components/PieChart.razor" />
            </Container>
        </TabPanel>
    </Content>
</Tabs>

@code{
    string selectedTab = "example";

    private void OnSelectedTabChanged(string name)
    {
        selectedTab = name;
    }
}