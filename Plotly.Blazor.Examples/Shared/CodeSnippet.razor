@code {
    [Parameter]
    public string Uri { get; set; }

    string Code { get; set; }

    /// <inheritdoc />
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Code = await CodeHttpClient.GetStringAsync(Uri);
            StateHasChanged();
        }
        await JsRunTime.InvokeVoidAsync("onBlazorReady");
    }
}
